<div class="jumbotron text-center">
<h1>EAT-THE-BURGER</h1>
<img src="/assets/images/burger.png" alt="burger" class="align-center">
</div>



<div class="row burger-cards">
    <div class="col-sm-12 col-md-6 col-lg-6 to-eat-card">
        <h2>Ready-to-eat burgers!</h2>
            <ul id= "burger-list">
                {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="burgers-toEat ">
                        <form class="update col-xl-9 col-lg-11 col-md-12 col-sm-12 card-body">
                {{this.id}}. {{this.burger_name}}
                            <button type="submit" data-id="{{this.id}}" class="devour-btn">DEVOUR</button>
                        </form>
                    </div>
                {{/unless}}
                {{/each}}
            </ul>
    </div>


        <div class="devoured-section col-sm-12 col-md-6 col-lg-6">
            <h2>Devoured Burgers!</h2>
        <ul id="devoured-list">
            {{#each burgers}}
            {{#if this.devoured}}
                <div class="devoured-burgers">
            {{this.id}}. {{this.burger_name}}
                </div>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div>
<form class="create-form">
    <div class="form-group">
        <input class="col-xl-3 col-lg-4 col-md-5 col-sm-12 col-xs-12" type="text" id="burger-input" name="name" placeholder="Enter a burger to eat!">
    </div>
    <button class="addBtn" type="submit">SUBMIT</button>
</form>
</div>
